<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Factorial_income.MainPage">

    <VerticalStackLayout
     Padding="20"
     Spacing="15"
     HorizontalOptions="Center"
     VerticalOptions="Center">
        <Label Text="Factorial Calculator"
               FontSize="28"
               FontAttributes="Bold"
               TextColor="Aquamarine"
               HorizontalOptions="Center"/>

        <Label Text="Enter a non-Negative integer"
        FontSize="16"
        FontAttributes="Bold"
        TextColor="Black"
               HorizontalOptions="Center"
       />
        <Entry x:Name="txtNumberEntry"
               Placeholder="e.g.,5"
               Keyboard="Numeric"
               FontSize="18"
               Margin="0,10,0,10"
               MaxLength="3"
               HorizontalOptions="Center"/>


        <Button
            Text="Calculate Factorial"
            FontSize="18"
            Clicked="CalculateFactorial_Clicked"
            BackgroundColor="Blue"
            TextColor="AntiqueWhite"
            CornerRadius="8"
            Padding="15"
            HorizontalOptions="Center"/>
        <Label
            x:Name="lblResult"
            FontSize="20"
            FontAttributes="Italic"
            TextColor="Black"
            Margin="0,20,0,0"/>
        <Button Text="Go to income tax problem" Clicked="GoToIncomeTaxPages_Clicked"
                />


    </VerticalStackLayout>
   


</ContentPage>
