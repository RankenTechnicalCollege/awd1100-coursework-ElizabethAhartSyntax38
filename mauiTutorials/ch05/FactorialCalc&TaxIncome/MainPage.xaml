<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FactorialCalc_TaxIncome.MainPage">

    <VerticalStackLayout
        Padding="20"
        Spacing="15"
        VerticalOptions="Center"
        HorizontalOptions="Center">
        <Label Text="Factorial Calculator"
               FontSize="20"
               FontAttributes="Bold"
               TextColor="Black"
                HorizontalOptions="Center"/>
            
        <Label Text="Enter a Non-Iteger Number"
        FontSize="16"
        FontAttributes="Bold"
        TextColor="Black"
        HorizontalOptions="Center"/>
       
        <Entry x:Name="txtNumberEntry"
               Placeholder=" e.g.,5"
               Keyboard="Numeric"
               FontSize="18"
               Margin="0,10,0,10"
               MaxLength="3"/>
        <Button
            Text="Calculate Factorial"
            Clicked="CalculateFactorial_Clicked"
            FontSize="18"
            BackgroundColor="AntiqueWhite"
            TextColor="Black"
            CornerRadius="8"
            Padding="15"
            HorizontalOptions="Center"/>
        <Label x:Name="lblResult"
               Text="Results will appear Here"
               FontSize="20"
               FontAttributes="Italic"
               TextColor="Black"
               Margin="0,20,0,0"
               HorizontalOptions="Center"/>
        <Button Text="Go to the Income Tax Problem" Clicked="GoToIncomeTaxPage_clicked" />
        

















    </VerticalStackLayout>

</ContentPage>
