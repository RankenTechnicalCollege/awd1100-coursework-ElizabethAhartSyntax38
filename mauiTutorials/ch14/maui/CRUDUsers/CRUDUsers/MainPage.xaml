<?xml version="1.0" encoding="utf-8" ?>


<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="CRUDUsers.MainPage">

    <ScrollView>
        <VerticalStackLayout Spacing="25" Padding="30,0" VerticalOptions="Center">
            <Label Text="User ManageMent" FontSize="32" HorizontalOptions="Center"/>
            <VerticalStackLayout Spacing="10">
                <Entry x:Name="NameEntry" Placeholder="Enter User Name"/>
                <Button Text="Add User" Clicked="OnAddUserClicked"/>
                
            </VerticalStackLayout>




            <CollectionView>ItemsSource = "{Binding Users}}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Grid Padding="10" ColumnDefinitions="*,Auto,Auto">
                            <Label Grid.Column="0"
                                Text="{Binding Name}"
                                VerticalOptions ="Center" />
                            <Button Grid.Column="1" 
                            Text="Edit"
                                    Background="orange"
                                    TextColor="AliceBlue"
                                    Margin="5,0"
                                    CommandParameter="{Binding .}"
                                    Clicked="OnUserEditUserClicked"/>
                            <Button Grid.Column="2"
                                    Text="Delete"
                                    Background="Red"
                                    TextColor="AntiqueWhite"
                                    CommandParameter="{Binding .}"
                                    Clicked="ODeleteUserClicked"/>

                        </Grid>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
